<div class="col-sm-3 clearfix">
  <%= avatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to content_tag(:span, '', class: 'glyphicon glyphicon-remove'), user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pull-right', title: "delete #{user.name}" %>
  <% end %>
</div>
